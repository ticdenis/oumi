{
  "name": "oumi",
  "description": "Oumi is a platform to control the state of your debts.",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "packages/shared",
      "packages/user",
      "services/account"
    ],
    "nohoist": []
  },
  "scripts": {
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn\")'",
    "commit": "git-cz",
    "cli": "./tools/cli.ts",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "prettier": "yarn workspaces run prettier",
    "test": "yarn workspaces run test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.44",
    "@types/node": "^11.11.0",
    "@types/shelljs": "^0.8.3",
    "chalk": "^2.4.2",
    "commitizen": "^3.0.7",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "inquirer": "^6.2.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
