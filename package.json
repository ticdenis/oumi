{
  "name": "oumi",
  "description": "Oumi is a platform to control the state of your debts.",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/core",
    "packages/shared",
    "packages/user",
    "packages/contact",
    "packages/debt",
    "services/accounts"
  ],
  "scripts": {
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn\")'",
    "commit": "git-cz",
    "cli": "./tools/cli.ts",
    "docker": "./tools/docker-stack.sh",
    "reset": "rimraf node_modules && rimraf **/node_modules && yarn install && yarn clean && yarn build",
    "build": "yarn workspaces run build",
    "watch:packages": "concurrently \"npm:watch:package-*\"",
    "watch:package-core": "yarn workspace @oumi-package/core run watch",
    "watch:package-shared": "yarn workspace @oumi-package/shared run watch",
    "watch:package-user": "yarn workspace @oumi-package/user run watch",
    "watch:package-contact": "yarn workspace @oumi-package/contact run watch",
    "watch:package-debt": "yarn workspace @oumi-package/debt run watch",
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prettier": "yarn workspaces run prettier",
    "update": "yarn workspaces run upgrade",
    "test": "yarn workspaces run test",
    "test:packages": "concurrently \"yarn:test:package-*\"",
    "test:package-core": "yarn workspace @oumi-package/core run test",
    "test:package-shared": "yarn workspace @oumi-package/shared run test",
    "test:package-user": "yarn workspace @oumi-package/user run test",
    "test:package-contact": "yarn workspace @oumi-package/contact run test",
    "test:package-debt": "yarn workspace @oumi-package/debt run test",
    "test:services": "concurrently \"yarn:test:service-*\"",
    "test:service-accounts": "yarn workspace @oumi-service/accounts run test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@types/inquirer": "^6.0.0",
    "@types/node": "^11.13.0",
    "@types/shelljs": "^0.8.3",
    "chalk": "^2.4.2",
    "commitizen": "^3.0.7",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "inquirer": "^6.2.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
