{
  "name": "oumi",
  "description": "Oumi is a platform to control the state of your debts.",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/shared",
    "packages/user",
    "packages/contact",
    "packages/movement",
    "packages/rabbitmq",
    "packages/elasticsearch",
    "services/accounts",
    "services/transactions"
  ],
  "copyFiles": [{
    "from": ".env.sample",
    "to": ".env"
  }],
  "scripts": {
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn\")'",
    "commit": "git-cz",
    "cli": "./tools/cli.ts",
    "reset": "rimraf **/node_modules && rimraf node_modules && yarn install && yarn clean && yarn build",
    "build": "yarn workspaces run build",
    "watch": "concurrently \"yarn run watch:packages\" \"yarn run watch:services\"",
    "watch:packages": "concurrently \"yarn run watch:package-shared\" \"yarn run watch:package-user\" \"yarn run watch:package-contact\" \"yarn run watch:package-movement\" \"yarn run watch:package-rabbitmq\"",
    "watch:package-shared": "yarn workspace @oumi-package/shared run watch",
    "watch:package-user": "yarn workspace @oumi-package/user run watch",
    "watch:package-contact": "yarn workspace @oumi-package/contact run watch",
    "watch:package-movement": "yarn workspace @oumi-package/movement run watch",
    "watch:package-rabbitmq": "yarn workspace @oumi-package/rabbitmq run watch",
    "watch:services": "concurrently \"yarn run watch:service-transactions\" \"yarn run watch:service-accounts\"",
    "watch:service-accounts": "yarn workspace @oumi-service/accounts run watch",
    "watch:service-transactions": "yarn workspace @oumi-service/transactions run watch",
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prettier": "yarn workspaces run prettier",
    "update": "yarn workspaces run upgrade",
    "rimraf": "rimraf",
    "test": "yarn workspaces run test",
    "test:packages": "concurrently \"yarn:test:package-*\"",
    "test:package-shared": "yarn workspace @oumi-package/shared run test",
    "test:package-user": "yarn workspace @oumi-package/user run test",
    "test:package-contact": "yarn workspace @oumi-package/contact run test",
    "test:package-movement": "yarn workspace @oumi-package/movement run test",
    "test:services": "concurrently \"yarn:test:service-*\"",
    "test:service-accounts": "yarn workspace @oumi-service/accounts run test",
    "test:service-transactions": "yarn workspace @oumi-service/transactions run test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "migrator:migrate": "concurrently \"yarn:migrator-migrate*\"",
    "migrator-migrate-accounts": "yarn workspace @oumi-service/accounts run migrator migrate",
    "migrator-migrate-transactions": "yarn workspace @oumi-service/transactions run migrator migrate",
    "migrator:rollback": "concurrently \"yarn:migrator-rollback*\"",
    "migrator-rollback-accounts": "yarn workspace @oumi-service/accounts run migrator rollback",
    "migrator-rollback-transactions": "yarn workspace @oumi-service/transactions run migrator rollback",
    "prepare-env": "concurrently \"copy-files-from-to --config package.json\" \"yarn:prepare-env-*\"",
    "prepare-env-accounts": "yarn workspace @oumi-service/accounts run prepare-env",
    "prepare-env-transactions": "yarn workspace @oumi-service/transactions run prepare-env"
  },
  "devDependencies": {
    "@types/inquirer": "^6.0.0",
    "@types/node": "^11.13.0",
    "@types/shelljs": "^0.8.5",
    "chalk": "^2.4.2",
    "commitizen": "^3.1.0",
    "conventional-changelog-cli": "^2.0.12",
    "copy-files-from-to": "^1.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "inquirer": "^6.3.1",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
