{
  "name": "@oumi-{{projectType}}/{{projectName}}",
  "description": "{{projectDescription}}",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn\")'",
    "clean": "rimraf dist",
    "start": "pm2 start --name '@oumi-{{projectType}}/{{projectName}}' ts-node -- -P tsconfig.json ./src/main.ts",
    "serve": "node dist/main.js",
    "build": "tsc --declaration",
    "watch": "yarn build -w",
    "debug": "nodemon --delay 3 --watch ./dist --legacy-watch ./dist/main.js",
    "dev": "concurrently --kill-others \"npm:debug\" \"npm:watch\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --config .prettierrc --write \"./**/*.ts\"",
    "test": "ava --verbose",
    "test:watch": "yarn test --watch",
    "coverage": "nyc ava --verbose",
    "report": "nyc report -r=text-lcov > coverage.lcov"
  },
  "devDependencies":  {
    "@types/node": "^11.11.0",
    "@types/sinon": "^7.0.9",
    "ava": "^1.3.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "pm2": "^3.3.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "supertest": "^4.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "vrsource-tslint-rules": "^6.0.0"
  }
}
